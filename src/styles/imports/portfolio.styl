.Watermark {
    margin: 0;
    height: 160px;
    position: absolute;
    bottom: 0;
    right: 0;
    overflow: hidden;
    font-size: 150px;
    letter-spacing: -12px;
    line-height: 209px;
    color: $darkpurple;
    z-index: -1;
    // opacity: 0.5;
    display: none;
}
@media (min-width: 600px) {
    .Watermark {
        display: block;
    }
}
@media (min-width: 768px) {
    .Watermark {
        height: 170px;
        font-size: 180px;
        letter-spacing: -15px;
    }
}
@media (min-width: 1024px) {
    .Watermark {
        height: 190px;
        font-size: 240px;
        letter-spacing: -21px;
    }
}
@media (min-width: 1100px) {
    .Watermark {
        height: 215px;
        font-size: 300px;
        letter-spacing: -29px;
    }
}






.Portfolio {
    margin: 0;
    width: 100%;
}
.Portfolio-item {
    font-size: 22px;
}

.Portfolio-item-link {
    padding: $padding-base;
    display: block;
    color: $grey;
    text-decoration: none;

    &:hover {
        color: $white;
        background: $darkpurple;
    }
}
@media (min-width: 600px) {

    .Portfolio {
        padding: $padding-base * 4;
    }

    .Portfolio-item {
        font-size: 18px;
    }

    .Portfolio-item-link {
        padding: 5px 10px;
        margin-bottom: 10px;
        display: inline-block;
    }
}









.Portfolio-details {
    margin-top: $padding-base * 2;
    font-size: 18px;
}

.Portfolio-details-item {
    padding: 0 ($padding-base * 2) ($padding-base * 2) ($padding-base * 2);
    color: $grey;
    display: none;
}
.Portfolio-details-item.is-active {
    display: block;
}

.Portfolio-details-title,
.Portfolio-details-description {
    margin-bottom: $padding-base;
    font-weight: normal;
    font-size: inherit;
}

.Portfolio-details-action a {
    display: inline-block;
    margin-right: $padding-base;
    color: $grey;
}








.Overlay {
    padding: $padding-base;
    width: 100%;
    background: $darkpurple;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
    transform: translateX(-100%);
}
.Overlay.slide-up-down {
    display: none;
    transform: translateX(0) translateY(100%);
}

.Overlay-close {
    height: 48px;
    width: 48px;
    display: block;
    position: absolute;
    right: $padding-base;
    transform: rotate(45deg);
    transition: transform 150ms ease-in;

    // hide the font
    font-size: 0;
    line-height: 0;
    text-decoration: none;

    &:after,
    &:before {
        position: absolute;
        top: 24px;
        left: 0;
        content: '';
        display: block;
        width: 48px;
        height: 2px;
        background: $grey;
    }

    &:before {
        top: 23px;
        transform: rotate(90deg);
    }

    &:hover {
        transform: rotate(135deg);
    }
}





//
// Contact
// --------------------------------------------------

.Contact {
    margin-top: $padding-base * 2;
    position: relative;
    text-align: right;

    clearfix();
}

.Contact-title {
    color: $grey;
    text-align: left;
    padding: 0 $padding-base * 2;
    padding-top: $padding-base;
    text-align: center;
}

.Contact-links {
    // margin-top: 50px;
    margin-bottom: $padding-base * 2;
    padding: 0 $padding-base * 2;
    background: $darkgrey;

}

.Contact-links-item {
    text-align: left;
    margin-bottom: $padding-base;
    text-align: center;
}

.Contact-links a {
    color: $grey;
    text-decoration: none;

    &:hover {
        color: #ff3846;
    }
}



// 480
@media (min-width: 510px) {

    .Contact {
        margin-top: 90px;
    }

    .Contact-title {
        padding-right: $padding-base * 2;
        position: absolute;
        right: 250px;
        top: 25px;
        text-align: right;
    }

    .Contact-links {
        padding: 0 $padding-base * 2;
        width: 250px;
        border-left: solid 1px $white;
        font-size: 18px;
        display: inline-block;
    }

    .Contact-links-item {
        text-align: left;

        &:last-child {
            margin-bottom: 0;
        }

    }

}



